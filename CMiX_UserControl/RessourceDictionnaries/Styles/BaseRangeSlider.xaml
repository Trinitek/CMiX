<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:CMiX"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <ControlTemplate x:Key="RangeSliderThumb" TargetType="{x:Type Thumb}">
        <Grid HorizontalAlignment="Stretch" UseLayoutRounding="True" VerticalAlignment="Stretch">
            <Rectangle x:Name="grip" Width="10" Fill="{DynamicResource BaseLightColor}" Stretch="Fill" SnapsToDevicePixels="True"  UseLayoutRounding="True" VerticalAlignment="Stretch"/>
            <Popup x:Name="ToolTip" HorizontalOffset="{Binding ActualWidth}">
                <Border Background="Red" Width="5" Height="5">
                    <TextBlock x:Name="displayvalue"/>
                </Border>
            </Popup>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{DynamicResource BaseHighLightColor}"/>
            </Trigger>
            <Trigger Property="IsDragging" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{DynamicResource BaseHighLightColor}"/>
            </Trigger>

        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="RangeSliderMiddleThumb" TargetType="{x:Type Thumb}">
        <Grid HorizontalAlignment="Stretch" UseLayoutRounding="True" VerticalAlignment="Stretch">
            <Rectangle x:Name="grip"  Fill="{DynamicResource BaseLightColor}" Stretch="Fill" SnapsToDevicePixels="True"  UseLayoutRounding="True" VerticalAlignment="Stretch"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{DynamicResource BaseHighLightColor}"/>
            </Trigger>
            <Trigger Property="IsDragging" Value="true">
                <Setter Property="Fill" TargetName="grip" Value="{DynamicResource BaseHighLightColor}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
    <Style x:Key="RepeatButtonDecrease" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="{DynamicResource BaseDarkColor}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RepeatButtonDecreaseOver" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="{DynamicResource BaseColor}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
    <!--Range slider default style-->
    <Style TargetType="{x:Type local:RangeSlider}" x:Key="BaseRangeSlider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RangeSlider}" >
                    <Grid Background="Transparent">
                        <StackPanel Orientation="Horizontal" Name="PART_RangeSliderContainer">
                            <RepeatButton Name="PART_LeftEdge" Style="{StaticResource RepeatButtonDecrease}"/>
                            <Thumb Name="PART_LeftThumb" Cursor="SizeWE" Template="{StaticResource RangeSliderThumb}"/>
                            <Thumb Name="PART_MiddleThumb" Cursor="ScrollAll" MinWidth="0" Template="{StaticResource RangeSliderMiddleThumb}"/>
                            <Thumb Name="PART_RightThumb" Cursor="SizeWE" Template="{StaticResource RangeSliderThumb}"/>
                            <RepeatButton Name="PART_RightEdge" Style="{StaticResource RepeatButtonDecrease}"/>
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Style" TargetName="PART_LeftEdge" Value="{DynamicResource RepeatButtonDecreaseOver}"/>
                            <Setter Property="Style" TargetName="PART_RightEdge" Value="{DynamicResource RepeatButtonDecreaseOver}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>