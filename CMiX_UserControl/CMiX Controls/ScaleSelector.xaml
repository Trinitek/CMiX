<UserControl x:Class="CMiX.ScaleSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:CMiX="clr-namespace:CMiX" 
             mc:Ignorable="d" 
             d:DesignHeight="349.667" d:DesignWidth="520">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CMiX_UserControl;component/RessourceDictionnaries/Brushes/GenericBrushes.xaml"/>
                <ResourceDictionary Source="/CMiX_UserControl;component/RessourceDictionnaries/Styles/BaseRadioButtonStyle.xaml"/>
                <ResourceDictionary Source="/CMiX_UserControl;component/RessourceDictionnaries/Styles/BaseLabelStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <CMiX:PathToFilenameConverter x:Key="PathToFileName"/>
            <CMiX:ColorToStringConverter x:Key="ColorToString"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Padding="8" Margin="32" Background="{StaticResource BaseDarkerColor}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Direction="0" BlurRadius="32" Opacity="1"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock Margin="8, 0, 8, 8" Text="SCALE STYLE" Foreground="{StaticResource BaseText}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Content="STEADY" Style="{StaticResource BaseLabelStyle}" Height="25" Margin="0, 0, 0, 4"/>
                    <RadioButton x:Name="STD_CTR" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="STD_CTR" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="STD_RDM" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="STD_RDM" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="STD_LIN" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="STD_LIN" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Content="FLASH" Style="{StaticResource BaseLabelStyle}" Height="25" Margin="0, 0, 0, 4"/>
                    <RadioButton x:Name="FLA_RDM" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="2" Height="25" Content="FLA_RDM" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="FLA_GRW" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="2" Height="25" Content="FLA_GRW" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="FLA_CMP" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="2" Height="25" Content="FLA_CMP" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Label Content="SLIDE" Style="{StaticResource BaseLabelStyle}" Height="25" Margin="0, 0, 0, 4"/>
                    <RadioButton x:Name="SLD_RDM_DMP" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="SLD_RDM_DMP" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="SLD_RDM_LIN" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="SLD_RDM_LIN" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="SLD_GRW" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="SLD_GRW" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                    <RadioButton x:Name="SLD_CMP" Checked="RadioButton_Checked" Margin="1" Grid.Column="0" Grid.Row="0" Height="25" Content="SLD_CMP" GroupName="Translate" Style="{StaticResource BaseRadioButtonStyle}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
