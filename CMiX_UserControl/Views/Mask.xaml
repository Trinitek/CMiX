<UserControl
    x:Class="CMiX.Views.Mask"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:Views="clr-namespace:CMiX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="812"
    d:DesignWidth="321"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <Border 
            DockPanel.Dock="Top"            
            BorderThickness="0, 0, 0, 2"
            Margin="0, 0, 0, 2"
            BorderBrush="{StaticResource DarkColor}">
            <Grid>
                <Label
                    Grid.Column="1"
                    Height="25"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource LabelBase}"
                    Content="MASK"
                    DockPanel.Dock="Left"/>
                <ToggleButton
                x:Name="MaskOn"
                Grid.Row="0"
                Width="{Binding ActualHeight, ElementName=MaskOn, Mode=OneWay}"
                Margin="4"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Center"
                IsChecked="{Binding Enabled}"
                Style="{StaticResource ToggleButtonBase}" />
            </Grid>
        </Border>
        <Views:BeatModifier
            x:Name="MaskBeatModifier"
            Margin="0,2,0,2"
            DataContext="{Binding BeatModifier}"
            DockPanel.Dock="Top" />
        <Views:PostFX
            x:Name="MaskPostFX"
            Margin="0,2,0,0"
            DataContext="{Binding PostFX}"
            DockPanel.Dock="Bottom" />
        <Views:Geometry
            x:Name="MaskGeometry"
            Margin="0,2,0,2"
            DataContext="{Binding Geometry}"
            DockPanel.Dock="Bottom" />
        <Views:Texture
            x:Name="MaskTexture"
            Margin="0,2,0,2"
            DataContext="{Binding Texture}"
            DockPanel.Dock="Top" />
    </DockPanel>
</UserControl>
