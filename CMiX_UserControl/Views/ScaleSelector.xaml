<UserControl
    x:Class="CMiX.ScaleSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:CMiX="clr-namespace:CMiX"
    d:DesignHeight="349.667"
    d:DesignWidth="520"
    mc:Ignorable="d">
    <Border
        Margin="32"
        Padding="8"
        Background="{StaticResource DarkerColor}">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="32"
                Direction="0"
                Opacity="1"
                ShadowDepth="0" />
        </Border.Effect>
        <StackPanel>
            <TextBlock
                Margin="8,0,8,8"
                Foreground="{StaticResource TextBase}"
                Text="SCALE STYLE" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label
                        Height="25"
                        Margin="0,0,0,4"
                        Content="STEADY"
                        Style="{StaticResource LabelBase}" />
                    <RadioButton
                        x:Name="STD_CTR"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="STD_CTR"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="STD_RDM"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="STD_RDM"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="STD_LIN"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="STD_LIN"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label
                        Height="25"
                        Margin="0,0,0,4"
                        Content="FLASH"
                        Style="{StaticResource LabelBase}" />
                    <RadioButton
                        x:Name="FLA_RDM"
                        Grid.Row="2"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="FLA_RDM"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="FLA_GRW"
                        Grid.Row="2"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="FLA_GRW"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="FLA_CMP"
                        Grid.Row="2"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="FLA_CMP"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <Label
                        Height="25"
                        Margin="0,0,0,4"
                        Content="SLIDE"
                        Style="{StaticResource LabelBase}" />
                    <RadioButton
                        x:Name="SLD_RDM_DMP"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="SLD_RDM_DMP"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="SLD_RDM_LIN"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="SLD_RDM_LIN"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="SLD_GRW"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="SLD_GRW"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                    <RadioButton
                        x:Name="SLD_CMP"
                        Grid.Row="0"
                        Grid.Column="0"
                        Height="25"
                        Margin="1"
                        Checked="RadioButton_Checked"
                        Content="SLD_CMP"
                        GroupName="Translate"
                        Style="{StaticResource RadioButtonBase}" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
