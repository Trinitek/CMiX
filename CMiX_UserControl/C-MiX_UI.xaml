<UserControl
    x:Class="CMiX.CMiX_UI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMiX="clr-namespace:CMiX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="cmix"
    d:DesignHeight="972"
    d:DesignWidth="1584.666"
    FontFamily="Roboto Medium"
    FontSize="11"
    Loaded="cmix_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Brushes/GenericBrushes.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseFocusVisual.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseTreeViewStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseRadioButtonStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/LayerRadioButtonStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseButtonStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseComboBoxStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseComboBoxItemStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseComboBoxItemPanelStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseToggleButtonStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseTextBoxStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseTabControlStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseTabItemStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseLabelStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseSliderStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseGroupBoxStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseListBoxControlStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseListBoxItemStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseMenuStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseMenuItemStyle.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseContextMenuStyle.xaml" />
                <!--<ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseScrollViewerStyle.xaml" />-->
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/Styles/BaseRangeSlider.xaml" />

                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/LayerControlTemplate.xaml" />
                <ResourceDictionary Source="/CMiX_UserControl;component/Resources/ContentControlTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CMiX:PeriodToBPMConverter x:Key="PeriodToBPM" />
            <CMiX:ColorToStringConverter x:Key="ColorToString" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel
        x:Name="CMiX_UserControl"
        Background="#FF141414"
        KeyDown="LayerButton_KeyDown"
        LastChildFill="True">
        <Grid Margin="0,0,0,2" DockPanel.Dock="Top">
            <Label
                x:Name="ProjectName"
                HorizontalContentAlignment="Right"
                Background="{DynamicResource BaseColor}"
                Content="{Binding DataContext.CompoName[0], ElementName=cmix, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Foreground="{DynamicResource BaseText}" />
            <Menu
                x:Name="MainMenu"
                Grid.Row="0"
                Height="25"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Focusable="False"
                Style="{DynamicResource BaseMenuStyle}">
                <MenuItem
                    x:Name="FileMenu"
                    Height="{Binding ActualHeight, ElementName=MainMenu, Mode=OneWay}"
                    Padding="20,0,20,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="center"
                    Focusable="False"
                    Header="File"
                    Style="{DynamicResource BaseMenuItemStyle}">
                    <MenuItem
                        Click="New_Click"
                        Header="New"
                        Template="{DynamicResource BaseSubMenuItem}" />
                    <MenuItem
                        Click="Open_Click"
                        Header="Open"
                        Template="{DynamicResource BaseSubMenuItem}" />
                    <MenuItem
                        Click="Save_Click"
                        Header="Save"
                        Template="{DynamicResource BaseSubMenuItem}" />
                    <MenuItem
                        Click="SaveAs_Click"
                        Header="Save As"
                        Template="{DynamicResource BaseSubMenuItem}" />
                    <MenuItem
                        Click="Quit_Click"
                        Header="Quit"
                        Template="{DynamicResource BaseSubMenuItem}" />
                </MenuItem>
            </Menu>
        </Grid>
        <Border
            Grid.Row="2"
            Height="25"
            Margin="0,2,0,0"
            Background="{StaticResource BaseDarkerColor}"
            DockPanel.Dock="Bottom" />
        <Grid Grid.Row="1" KeyboardNavigation.TabNavigation="Cycle">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Margin="4"
                Background="{StaticResource BaseHighDarkerColor}"
                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                Focusable="True">
                <DockPanel KeyboardNavigation.TabNavigation="None" LastChildFill="False">

                    <CMiX:MasterBeatControl
                        x:Name="MasterBeatControl"
                        DockPanel.Dock="Bottom"
                        FocusVisualStyle="{StaticResource FocusVisualStyle}"
                        Focusable="True"
                        MasterPeriod="{Binding DataContext.MasterPeriod[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Height="20"
                        Margin="0,4,0,4"
                        HorizontalContentAlignment="Center"
                        Background="{StaticResource BaseDarkColor}"
                        Content="Beat"
                        DockPanel.Dock="Bottom"
                        FontSize="10"
                        Foreground="{StaticResource BaseText}" />

                    <DockPanel
                        x:Name="CameraControl"
                        Margin="0,4,0,4"
                        DockPanel.Dock="Bottom"
                        FocusVisualStyle="{StaticResource FocusVisualStyle}"
                        Focusable="True">
                        <Label
                            Height="20"
                            Margin="0,0,0,4"
                            HorizontalContentAlignment="Center"
                            Background="{StaticResource BaseDarkColor}"
                            Content="Camera"
                            DockPanel.Dock="Top"
                            FontSize="10"
                            Foreground="{StaticResource BaseText}" />
                        <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                            <CMiX:BeatControls
                                x:Name="BeatControlsCam"
                                Height="25"
                                Margin="1"
                                BeatControlChanged="BeatControlsCam_BeatControlChanged"
                                DockPanel.Dock="Right"
                                MasterPeriod="{Binding DataContext.MasterPeriod[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Multiplier="{Binding DataContext.CamBeatMultiplier[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CMiX:CustomSlider
                                x:Name="CamChanceToHit"
                                Height="25"
                                SliderValueChanged="SliderValueChanged"
                                Tag="CamChanceToHit"
                                Value="{Binding DataContext.CamChanceToHit[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>
                        <Grid DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <CMiX:CMiXComboBox
                                x:Name="CameraRotation"
                                Grid.Column="0"
                                Height="25"
                                Margin="1"
                                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                                ItemContainerStyle="{DynamicResource BaseListBoxItemStyle}"
                                ItemsSource="{Binding CamRotation, ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding DataContext.CamRotation[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectionChanged="ComboBoxSelectionChanged"
                                Tag="CamRotation"
                                Template="{DynamicResource BaseComboBoxStyle}" />
                            <CMiX:CMiXComboBox
                                x:Name="CameraLookAt"
                                Grid.Column="1"
                                Height="25"
                                Margin="1"
                                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                                ItemContainerStyle="{DynamicResource BaseListBoxItemStyle}"
                                ItemsSource="{Binding CamLookAt, ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding DataContext.CamLookAt[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectionChanged="ComboBoxSelectionChanged"
                                Tag="CamLookAt"
                                Template="{DynamicResource BaseComboBoxStyle}" />
                            <CMiX:CMiXComboBox
                                x:Name="CameraView"
                                Grid.Column="2"
                                Height="25"
                                Margin="1"
                                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                                ItemContainerStyle="{DynamicResource BaseListBoxItemStyle}"
                                ItemsSource="{Binding CamView, ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedItem="{Binding DataContext.CamView[0], ElementName=cmix, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectionChanged="ComboBoxSelectionChanged"
                                Tag="CamView"
                                Template="{DynamicResource BaseComboBoxStyle}" />

                        </Grid>
                        <CMiX:CMiXRangeSlider
                            x:Name="CameraFOV"
                            Height="25"
                            Margin="1"
                            DockPanel.Dock="Top"
                            RangeSliderValueChanged="RangeSliderValueChanged"
                            Tag="CamFOV" />
                        <CMiX:CMiXRangeSlider
                            x:Name="CameraZoom"
                            Height="25"
                            Margin="1"
                            DockPanel.Dock="Top"
                            RangeSliderValueChanged="RangeSliderValueChanged"
                            Tag="CamZoom" />
                    </DockPanel>
                </DockPanel>
            </Border>

            <Grid
                x:Name="ContentControl"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Margin="0,4,0,4"
                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                Focusable="True"
                KeyboardNavigation.TabNavigation="None">
                <CMiX:ChannelControls x:Name="Layer0" Tag="0"
                                        DataContext="{Binding DataContext.ChData[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=cmix}"
                                        MasterPeriod="{Binding ControlPeriod, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, ElementName=BeatControlsChannel0}"/>

            </Grid>

            <Border
                Grid.Column="4"
                Margin="4"
                Background="{StaticResource BaseDarkerColor}"
                FocusVisualStyle="{DynamicResource FocusVisualStyle}"
                Focusable="True">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                        <Button
                            x:Name="AddLayer"
                            Width="25"
                            Height="25"
                            Click="AddLayer_Click"
                            Content="+"
                            DockPanel.Dock="left"
                            Style="{StaticResource BaseButtonStyle}" />
                        <Button
                            x:Name="RemoveLayer"
                            Width="25"
                            Height="25"
                            Click="RemoveLayer_Click"
                            Content="-"
                            DockPanel.Dock="left"
                            Style="{StaticResource BaseButtonStyle}" />
                    </StackPanel>


                    <ScrollViewer
                        Margin="2"
                        DockPanel.Dock="Bottom"
                        VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.2*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                x:Name="LayerEnableStack"
                                Grid.Column="0"
                                DragEnter="sp_DragEnter"
                                Drop="sp_Drop"
                                PreviewMouseLeftButtonDown="sp_PreviewMouseLeftButtonDown"
                                PreviewMouseLeftButtonUp="sp_PreviewMouseLeftButtonUp"
                                PreviewMouseMove="sp_PreviewMouseMove">
                                <!--<CMiX:ChannelEnable x:Name="LayerEnable0" Tag="0" DataContext="{Binding DataContext.ChData[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=cmix}"/>-->
                            </StackPanel>
                            <StackPanel
                                x:Name="LayerControlStack"
                                Grid.Column="1"
                                AllowDrop="True">
                                <CMiX:ChannelLayer x:Name="LayerControl0" DataContext="{Binding DataContext.ChData[0], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ElementName=cmix}" />
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
